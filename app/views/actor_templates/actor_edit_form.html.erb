<h1>Edit Actor <%= @actor.name %></h1>

<form action="/update_actor/<%= @actor.id %>">
  <div>
    <label for="actor_name_input">
      Actor Name
    </label>

    <input id="actor_name_input" type="text" name="actor_name" value="<%= @actor.name%>">
  </div>

  <div>
    <label for="bio_input">
      Bio
    </label>

    <input id="bio_input" type="text" name="actor_bio" value="<%= @actor.bio%>">
  </div>
  
  <div>
    <label for="dob_input">
      D.O.B.
    </label>

    <input id="dob_input" type="text" name="actor_dob" value="<%= @actor.dob%>">
  </div>
  
  <div>
    <label for="image_input">
      Image URL
    </label>

    <input id="image_input" type="text" name="actor_image" value="<%= @actor.image_url%>">
  </div>

  <button>
    Update Actor
  </button>
</form>